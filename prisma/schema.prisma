generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(cuid())
  name            String   @unique
  email           String?  @unique
  password        String?
  provider        String?  // "credentials" | "google" など
  profileImageUrl String?  @default("/images/noImg.webp")
  createdAt       DateTime @default(now())
  profile         Profile?
  rewards         Reward[]
  GotRewards      GotReward[]
  todos           Todo[]
  accounts        Account[]
  sessions        Session[]
}

model Profile {
  id            String  @id @default(cuid())
  dream         String?
  limit         String?
  displayName   String?
  stars         Int?    @default(0)
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reward {
  id         String   @id @default(cuid())
  title      String
  star       Int?
  image      String?  // 画像は1つだけ保存
  createdAt  DateTime @default(now())
  userId     String   
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GotReward {
  id         String   @id @default(cuid())
  title      String
  star       Int?
  createdAt  DateTime @default(now())
  userId     String   
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Todo {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String

  category    TodoCategory
  title       String

  limit       Int[]    @default([])

  detail      String?
  description String?
  image       String?    // Fileはアップロード後URLで扱う想定
  star        Int?     @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TodoCategory {
  year
  month
  week
  day
  time
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

