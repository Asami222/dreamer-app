generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String   @id @default(uuid()) @db.Uuid
  name            String   @unique
  email           String?  @unique
  password        String?
  provider        String?
  profileImageUrl String?  @default("/images/noImg.webp")
  createdAt       DateTime @default(now())
  profile         Profile?
  rewards         Reward[]
  GotRewards      GotReward[]
  todos           Todo[]
  accounts        Account[]
  sessions        Session[]
}

model Profile {
  id            String  @id @default(uuid()) @db.Uuid
  dream         String?
  limit         String?
  displayName   String?
  stars         Int?    @default(0)
  userId        String  @unique @db.Uuid
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Reward {
  id         String   @id @default(uuid()) @db.Uuid
  title      String
  star       Int?
  image      String?
  createdAt  DateTime @default(now())
  userId     String   @db.Uuid
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GotReward {
  id         String   @id @default(uuid()) @db.Uuid
  title      String
  star       Int?
  createdAt  DateTime @default(now())
  userId     String   @db.Uuid
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Todo {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  category    TodoCategory
  title       String
  limit       Int[]    @default([])

  detail      String?
  description String?
  image       String?
  star        Int?     @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum TodoCategory {
  year
  month
  week
  day
  time
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

